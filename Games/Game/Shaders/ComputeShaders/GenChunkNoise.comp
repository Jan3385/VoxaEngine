layout(local_size_x = 8, local_size_y = 8, local_size_z = 1) in;

layout (r32ui, binding = 0) uniform uimage2D outImage;

void main(){
    ivec2 coord = ivec2(gl_GlobalInvocationID.xy);

    // divided by scale
    uvec2 cell = uvec2(coord) / 4u;

    float noiseValue = ValueNoise(cell);
    
    imageStore(outImage, coord, uvec4(noiseValue, 0, 0, 0));
}